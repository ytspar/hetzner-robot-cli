{
  "name": "hetzner-cli",
  "version": "2.2.0",
  "description": "Unified CLI and Node.js library for Hetzner Robot API (dedicated servers) and Cloud API",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./cloud/client": {
      "types": "./dist/cloud/client.d.ts",
      "import": "./dist/cloud/client.js"
    },
    "./cloud/types": {
      "types": "./dist/cloud/types.d.ts",
      "import": "./dist/cloud/types.js"
    },
    "./robot/client": {
      "types": "./dist/robot/client.d.ts",
      "import": "./dist/robot/client.js"
    },
    "./robot/types": {
      "types": "./dist/robot/types.d.ts",
      "import": "./dist/robot/types.js"
    }
  },
  "bin": {
    "hetzner": "./dist/cli.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.test.js",
    "!dist/**/*.test.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "dev:website": "npm --prefix website run dev",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "audit": "npm audit",
    "check": "npm run typecheck && npm run lint && npm run test",
    "prepublishOnly": "npm run check && npm run build"
  },
  "keywords": [
    "hetzner",
    "hetzner-cloud",
    "hetzner-robot",
    "hcloud",
    "api",
    "cli",
    "dedicated-server",
    "cloud-server",
    "server-management",
    "datacenter",
    "hosting",
    "cloud",
    "infrastructure",
    "load-balancer",
    "firewall",
    "volume"
  ],
  "sideEffects": false,
  "author": "ytspar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ytspar/hetzner-cli.git"
  },
  "bugs": {
    "url": "https://github.com/ytspar/hetzner-cli/issues"
  },
  "homepage": "https://github.com/ytspar/hetzner-cli#readme",
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.3",
    "dotenv": "^17.2.4",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-plugin-security": "^3.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
