{
  "name": "hetzner-robot-cli",
  "version": "1.0.0",
  "description": "Feature-complete CLI and Node.js library for the Hetzner Robot API (dedicated servers)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "bin": {
    "hetzner": "./dist/cli.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.test.js",
    "!dist/**/*.test.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "audit": "npm audit",
    "check": "npm run typecheck && npm run lint && npm run test",
    "prepublishOnly": "npm run check && npm run build"
  },
  "keywords": [
    "hetzner",
    "robot",
    "api",
    "cli",
    "dedicated-server",
    "server-management",
    "hetzner-robot",
    "datacenter",
    "hosting",
    "cloud",
    "infrastructure"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ytspar/hetzner-robot-cli.git"
  },
  "bugs": {
    "url": "https://github.com/ytspar/hetzner-robot-cli/issues"
  },
  "homepage": "https://github.com/ytspar/hetzner-robot-cli#readme",
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "dotenv": "^16.4.7",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.0.0",
    "eslint-plugin-security": "^3.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
